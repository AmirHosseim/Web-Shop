@using UserServices.ViewModels
@model SignInViewModel

<head>
    <style>

        body {
            background-image: url('/Backgrounds/ranger-4df6c1b6.png');
            background-repeat: no-repeat;
            background-size: cover;
        }

        label {
            float: right;
            margin-bottom: 5px;
        }

        #input-group {
            margin-top: 1rem;
        }

        #form-box {
            box-shadow: 1px 1px 10px 1px black;
            background-color: white;
            display: inline-block;
            margin-top: 10%;
            padding: 1rem;
            border-radius: 1vw;
            padding: 1rem;
        }
        a{
            text-decoration:none;
        }
    </style>
</head>
<body>
    <div align="center">
        <div align="center" id="form-box" class="col-xl-4 col-lg-6 col-md-8 col-sm-12">
            <div asp-validation-summary="ModelOnly"></div>
            <form method="post" asp-action="LogIn" asp-controller="Account">
                <div id="input-group">
                    <label>ایمیل</label>
                    <br />
                    <input asp-for="Email" class="form-control"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div id="input-group">
                    <label>رمز عبور</label>
                    <br />
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div id="input-group" class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" asp-for="RemmberMe" role="switch" id="flexSwitchCheckChecked">
                    <label class="form-check-label" for="flexSwitchCheckChecked">مرا به خاطر بسپار</label>
                </div>
                <div align="right" id="input-group">
                    <input type="submit" value="ورود" class="btn btn-success" />
                </div>
            </form>
            <div>
                <p>
                    آیا هنوز ثبت نام نکرده اید؟ <a href="/Account/Register">ثبت نام رایگان</a>
                </p>
            </div>
            <div>
                <h3 class="text text-danger">
                    @ViewBag.ErrorMessage
                </h3>
            </div>

            <div>
                <form method="post" asp-controller="Account" asp-action="ExternalLogIn" asp-route-returnUrl="@Model.returnUrl">
                    @foreach (var provider in Model.ExternalLogins)
                    {
                        <button type="submit" value="@provider.Name"
                                name="provider" class="btn btn-primary">
                            ورود با حساب @provider.DisplayName
                        </button>
                    }
                </form>
            </div>
        </div>

    </div>
</body>
