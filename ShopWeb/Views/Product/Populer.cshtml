@using ChannelServices.ViewModels
@model List<PopulerProductsViewModel>
<head>
    <style>
        #Product-Img {
            width: 100%;
            height: 50%;
        }

        #Card-Body {
            margin-top: 3rem;
            display: inline-block;
            width: 18rem;
        }
    </style>
</head>
<body>
    @foreach (var item in Model)
    {
        <div class="card-body" id="Card-Body">

            <div>
                @if (item.product.ProductImages.Any())
                {
                    <img id="Product-Img" src="~/ProductsImages/@(item.product.ProductImages[0].FileName)@item.product.ProductImages[0].Format" />
                }
            </div>
            <h5 class="card-title">@item.product.Name</h5>
            <h6 class="card-subtitle mb-2 text-muted">@item.product.Price</h6>
            <h6 class="card-subtitle mb-2 text-muted">تعداد فروش: @item.SillQuantity</h6>
            <p class="card-text">@item.product.Description</p>
            <a asp-action="AddToOrder" class="btn btn-primary" asp-controller="Product" asp-route-productId="@item.product.Id" class="card-link">افزودن به سبد خرید</a>
            <a asp-action="Details" class="btn btn-warning" asp-controller="Product" asp-route-Id="@item.product.Id" asp-route-Name="@item.product.Name" class="card-link">مشخصات</a>
        </div>
    }
</body>