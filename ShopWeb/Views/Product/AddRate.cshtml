@using ChannelServices.ViewModels
@model AddRateViewModel
<head>

</head>
<body>
    <h3>نظر خود را وارد کنید</h3>
    <form method="post" asp-action="AddRate" asp-controller="Product">
        <label>عنوان نطر</label>
        <input asp-for="Title" class="form-control" />
        <br />
        <label>توضیحات</label>
        <input asp-for="Description" class="form-control"/>
        <br />
        @foreach (var item in Model.RatePoans)
        {
            <input type="radio" value="@item.Rate" asp-for="RatePoan" /> @item.TiTle
        }
        <input asp-for="@Model.ProductId" type="hidden" />
        <input type="submit" value="ثبت نظر" />
    </form>
</body>